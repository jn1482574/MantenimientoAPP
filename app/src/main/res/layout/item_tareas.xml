<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        card_view:cardUseCompatPadding="true"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_historial_resumen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/cardview_shadow_end_color"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_fecha"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:text=""/>

        <com.juanjoflores.mantenimientoapp.Views.AutoScaleTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_nombre"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="normal"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_estado"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/ll_historial_contenido"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_descripcion"
            android:text="Descripcion Tarea"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_tipo_tarea"
            android:text="Tarea de Limpieza"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_asignado"
            android:text="Asignado a Tecnico1"
            android:layout_weight="1"
            />

    </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>